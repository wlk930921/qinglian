/* pages/personal/certificate/certificate.wxss */
page{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column; 
}
.certificate-container{
  position: relative;
  padding: 0 51rpx;
  box-sizing: border-box;
  font-family: PingFang-SC-Medium;
  width: 100%;
  height: 100%;
}
.certificate-bg {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: -1;
}
.certificate-title {
  font-family: PingFang-SC-Bold;
	font-size: 40rpx;
	color: #41526f;
  margin-top: 210rpx;
  text-align: center;
}
.certificate-content {
  width: 100%;
  box-sizing: border-box;
  padding: 0 27rpx;
  margin-top: 100rpx;
	font-size: 30rpx;
	line-height: 70rpx;
	color: #41526f;
  margin-bottom: 70rpx;
}
.certificate-upline {
  display: inline-block;
  /* vertical-align: text-bottom; */
  line-height:30rpx;
  padding:0 20rpx;
  height: 30rpx;
  /* box-sizing: border-box; */
  border-bottom: 1px solid #41526f;
  text-align: center;
  text-indent: 0rpx;
}
.certificate-content-text{
  text-indent: 60rpx;
  letter-spacing: 0rpx;
}
.certificate-thanks{
  font-family: PingFang-SC-Medium;
	font-size: 26rpx;
  text-indent: 52rpx;
	line-height: 44rpx;
  letter-spacing: 0rpx;
	color: #999999;
}
.certificate-signature {
  position: relative;
  text-align: right;
  margin-top:100rpx;
  margin-right: 30rpx;
  font-size: 30rpx;
	line-height: 70rpx;
	color: #41526f; 
}

.certificate-signature-bg {
  position: absolute;
  width: 128rpx;
  height: 128rpx;
  right:40rpx;
  top: -48rpx;
  z-index: -1;
}