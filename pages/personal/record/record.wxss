/* pages/personal/record/record.wxss */
page {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: #efeff4;
}
.record-container{
  width: 100%;
  height: 100%;
}
.record-item {
  width: 100%;
  height: 170rpx;
  padding: 22rpx 25rpx;
  box-sizing: border-box;
  display: flex;
  margin-top: 21rpx;
  background-color: #fff;
}
.record-item-left {
  width: 164rpx;
  height: 100%;
  flex:0 0 164rpx;
}
.record-item-right {
  position: relative;
  flex: 1;
  font-family: PingFang-SC-Medium;
  padding-left: 22rpx;
  box-sizing: border-box; 
}
.record-item-time {
  display: block;
	font-size: 24rpx;
  line-height: 38rpx;
	color: #a6a6a7;
  margin-bottom: 15rpx;
}
.record-item-title {
  display: block;
	font-size: 28rpx;
	color: #333;
  width: 265rpx;
	height: 100rpx;
  line-height: 38rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}
.record-item-donation {
  position: absolute;
  right: 0;
  top: 50rpx;
  font-size: 28rpx;
	color: #666666;
}
.nomore {
  padding: 10rpx 0 ;
  text-align: center;
  font-size: 24rpx;
	color: #a6a6a7;
}