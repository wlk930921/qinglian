/* pages/ranking/ranking.wxss */
page {
  width: 100%;
  height: 100%;
}
.ranking-container {
   position: relative; 
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  font-family: PingFang-SC-Medium;
}
/* 排名切换 */
.ranking-switch {
   position: absolute;
  top: 0;
  left: 0; 
  width: 100%;
  display: flex;
  height: 100rpx;
  box-shadow: inset 0px -1px 0px 0px #cccccc;
}
.switch-item {
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
	color: #333333;
}
.switch-item-text {
  display: inline-block;
  height: 100rpx;
  box-sizing: border-box;
  border-bottom: 10rpx solid transparent;
}
.switch-item-text.active {
	color: #f3513e;
  border-color: #f3513e;
}
/* 滚动 */
.ranking-scroll {
  width: 100%;
  padding: 0 20rpx;
  padding-top: 100rpx;
  box-sizing: border-box;
}
.list-item {
  position: relative;
  width: 100%;
  height: 140rpx;
  box-sizing: border-box;
  padding-left: 80rpx;
  padding-right: 40rpx;
  box-shadow: inset 0px -1px 0px 0px #cccccc;
  display: flex;
  align-items: center;
}
.item-icon {
  position: absolute;
  left: 0;
  top: 40rpx;
  width: 50rpx;
  height: 60rpx;
}
.item-avatar {
  display: inline-block;
  width: 100rpx;
  height: 100rpx;
  background-color: #ababab;
  border-radius: 4rpx;
  flex: 0 0 100rpx;
}
.item-name {
  flex:1;
  padding-left: 25rpx;
  font-size: 30rpx;
	line-height: 39rpx;
	color: #333333;
}
.item-value {
  flex: 0 0 120rpx;
  text-align: right;
  font-size: 30rpx;
	line-height: 59rpx;
	color: #666666;
}
.nomore {
  padding: 10rpx 0 ;
  text-align: center;
  font-size: 24rpx;
	color: #a6a6a7;
}